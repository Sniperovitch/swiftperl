extension PerlSub {
	/// Calls Perl subroutine by its name.
	///
	/// - Parameter name: A name of the subroutine.
	public static func call(_ name: String, perl: PerlInterpreter = .current) throws -> Void {
		try perl.call(sub: name)
	}

% for r in calls:
