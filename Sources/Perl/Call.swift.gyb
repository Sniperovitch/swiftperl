	/// - Returns: Return value of the call.
	public func call${fqGeneric(r)}(_ args: PerlSvConvertible?...) throws -> ${r} {
		return try withUnsafeSvContext {
			return try $0.perl.call(sv: $0.sv, args: args)
		}
	}
