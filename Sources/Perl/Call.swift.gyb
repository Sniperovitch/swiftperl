	///
	/// - Parameter name: A name of the subroutine.
	/// - Parameter args: Arguments of the call.
	/// - Returns: Return value of the call.
	public static func call${fqGeneric(r)}(_ name: String, _ args: PerlSvConvertible?..., perl: PerlInterpreter = .current) throws -> ${r} {
		return try perl.call(sub: name, args: args)
	}
% end

	/// Calls the underlain Perl subroutine.
	public func call() throws -> Void {
		try withUnsafeSvContext {
			try $0.perl.call(sv: $0.sv)
		}
	}

% for r in calls:
	/// Calls the underlain Perl subroutine.
